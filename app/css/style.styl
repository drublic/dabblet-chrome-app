@import 'h5bp'


html
  min-height 100%
  background url(http://dabblet.com/img/noise.png), -webkit-linear-gradient(#2E3538, rgba(46, 53, 56, .9))
  
  &.dabblet-app
    background #f9f9f9 url(http://dabblet.com/img/noise.png)
  
  
body
  font 1em/1.1em "Helvetica Neue", Helvetica, "Hiragino Sans GB", Arial, sans-serif
  color #222


// Links
a
  color #0069d6
  
  &:visited
    color #0069d6

  &:hover
    color #0050a3
    text-decoration none


// Paragraphes
p
  margin-bottom 9px


// Headlines
h1,
h2,
h3,
  color #404040
  line-height 36px

h1
  margin-bottom 18px
  font-size 2em

h2
  font-size 1.7em

h3
  font-size 1.3em



// Horizontal Line
hr
  margin 0 0 19px
  border-bottom 1px solid #ccc


// Code
code, pre
  font-family Monaco, Andale Mono, Courier New, monospace

code
  background-color #fee9cc
  color rgba(0, 0, 0, 0.75)
  padding 1px 3px
  font-size 12px
  border-radius 3px

pre
  display block
  padding 14px
  margin 0 0 18px
  line-height 16px
  font-size .8em
  border 1px solid #d9d9d9
  white-space pre-wrap
  word-wrap break-word
  
  code
    background-color #fff
    color #737373
    padding 0



// Tables
table
  position relative
  top 6em
  opacity 0
  width 100%
  margin 0 -1em
  border-collapse collapse
  margin-bottom 2em
  -webkit-transition all .5s
  
  &.fade
    top 0
    opacity 1

th
  text-align left
  border-bottom 1px solid #ccc

tbody tr:nth-child(even) td,
tbody tr:nth-child(even) th
  border 1px solid #ccc
  border-width 1px 0

td:nth-child(even),
th:nth-child(even)
  background #f1f1f1

th,
td
  padding .5em 1em
  
  a
    display block
    text-decoration none
  
tbody tr:hover td,
tbody tr:hover th
  background #eee !important




// Forms
label
  display block
  margin-bottom .3em
  text-shadow 0 -1px 0 rgba(255,255,255,.5)

input[type="text"],
input[type="email"],
input[type="password"],
input[type="url"]
  background #f1f1f1
  border 1px solid #aaa
  border-radius 5px
  padding 5px
  width 230px
  box-shadow 0 -1px 0 rgba(255,255,255,.2), inset 0 1px 1px rgba(0,0,0,.2)
  -webkit-transition all .3s

  &:focus
    background #fff
    outline 0
    border-color #888




// Header
header
  padding .4em 2em .2em
  background url(http://dabblet.com/img/noise.png), -webkit-linear-gradient(#2E3538, rgba(46, 53, 56, .9))
  border-bottom 10px solid #000
  margin-bottom 2em
  overflow hidden
  
#nav
  a
    float left
    padding .45em .6em
    margin-left 1em
    border 1px solid rgba(0,0,0,.4)
    border-radius .3em
    white-space nowrap
    text-decoration none
    background-image url(http://dabblet.com/img/noise.png)
    box-shadow rgba(255, 255, 255, .4) 0 1px 0 inset, rgba(255, 255, 255, .3) 0 25px 30px -12px inset, rgba(0, 0, 0, .6) 0 1px 2px
    text-shadow 0 -1px 1px black, 0 -1px 2px black
    cursor pointer
    color #fff
    font-weight bold
    
    &:visited
      color #fff
    
    &:hover,
    &:active
      background-color black
    
    img
      max-height 1.4em
      width 1.4em
      margin -.2em .3em -.2em -1.6em
      vertical-align bottom
      border-radius 1px
      box-shadow 0 0 0 1px rgba(0,0,0,.2)
      margin-left -.3em


#logo
  float left
  margin-right 2em


// Content

@-webkit-keyframes loader
  from
    background-position 0 0
  to
	  background-position -700px 0


#content
  position relative
  max-width 1200px
  min-height 500px
  margin 0 auto
  padding 1em
    
#loading
  position absolute
  top 50%
  left 50%
  width 100px
  height 100px
  margin -50px
  background url(../img/loader.png)
  -webkit-animation loader 1s infinite steps(7)




// Dialog
#overlay
  display -webkit-box
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  -webkit-box-align center
  -webkit-box-orient vertical
  -webkit-box-pack center
  background -webkit-radial-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0) 35%, rgba(0, 0, 0, .3))


@-webkit-keyframes shake
  0%, 30%, 60%, 90%
    margin-left 20px
  15%, 45%, 75%
    margin-left -20px
  100%
    margin-left 0


.outline
  position relative
  
  &.error
    -webkit-animation shake .5s 1


#dialog
  position relative
  z-index 1
  width 15em
  padding 0 2em .7em 148px
  border 1px solid #aaa;
  border-bottom-color #999
  border-radius 10px
  background -webkit-linear-gradient(#eee, rgba(230, 230, 230, .9))
  box-shadow inset 0 1px 0 #fff, 0 2px 30px rgba(0,0,0,.4)
  text-align center
  
  -webkit-transition all .5s
  top -6em
  opacity 0
  
  &.fade
    top 0
    opacity 1

  label
    font-size .9em
  
  input
    font-size 1.2em
    padding .4em 0
    text-align center
  
  
  h3
    position relative
    text-shadow 0 -1px 0 rgba(255,255,255,.5)
    font-weight normal
    margin .7em .5em
    border-bottom 1px solid #aaa;
    padding-bottom .4em
  
  
.messages
  position absolute
  bottom 0
  left 1.5em
  right 1.5em
  background rgba(230, 230, 230, .9)
  font-size .9em
  border-radius 0 0 .4em .4em
  text-align center
  -webkit-transition all .3s
  opacity 0
  
  &.fade
    opacity 1
    bottom -2.25em
  
  p
    padding .5em
    margin 0


.logo-big
  position absolute
  top -1px
  left -1px
  width 128px
  height 128px
  text-indent -999em
  background url(../img/logo-big.png)









